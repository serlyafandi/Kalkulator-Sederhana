<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
tools:context="com.example.calculator.MainActivity" > 10.
<TextView
android:id="@+id/textView1"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_alignParentTop="true"
android:layout_centerHorizontal="true"
android:text="KALKULATOR SEDERHANA" /> 18.
<EditText
android:id="@+id/input1"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:layout_alignParentLeft="true"
android:layout_below="@+id/textView1"
android:layout_marginTop="22dp"
android:hint="ANGKA PERTAMA"
android:inputType="numberDecimal|numberSigned" /> 28.
<EditText
android:id="@+id/input2"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:layout_below="@+id/input1"
android:hint="ANGKA KEDUA"
android:inputType="numberDecimal|numberSigned" /> 36.
<Button
android:id="@+id/bagi"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:layout_alignLeft="@+id/input2"
android:layout_below="@+id/input2"
android:layout_marginTop="26dp"
android:text="BAGI" /> 45.
<Button
android:id="@+id/tambah"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:layout_alignRight="@+id/bagi"
android:layout_below="@+id/bagi"
android:text="TAMBAH" /> 53.
 
<Button
android:id="@+id/kurang"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:layout_alignLeft="@+id/tambah"
android:layout_below="@+id/tambah"
android:text="KURANG" /> 61.
<Button
android:id="@+id/kali"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:layout_alignLeft="@+id/kurang"
android:layout_below="@+id/kurang"
android:text="KALI" /> 69.
<TextView
android:id="@+id/hasil"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_below="@+id/kali"
android:layout_centerHorizontal="true"
android:layout_marginTop="14dp"
android:text=""
android:textAppearance="?android:attr/textAppearanceMedium" /> 
</RelativeLayout>
